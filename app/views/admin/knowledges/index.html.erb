<div class="three wide column">
  <%= render 'admin/detail/nav' %>
</div>

<div class="thirteen wide column">

  <div class="ui top attached menu borderless">
    <div class="item"><strong>知识</strong></div>
    <div class="right menu">
      <div class="item"><%= link_to '新建', new_admin_knowledge_path, class: 'ui teal button' %></div>
    </div>
  </div>

  <table class="ui attached definition table">
    <thead class="full-width">
    <tr>
      <th class="one wide"></th>
      <th>ID</th>
      <th>名称</th>
      <th>类型</th>
      <th>描述</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @knowledges.each do |knowledge| %>
      <tr>
        <td class="center aligned">
          <%= link_to child_admin_knowledge_path(knowledge), remote: true do %>
            <i class="plus icon"></i>
          <% end %>
        </td>
        <td><%= knowledge.id %></td>
        <td><%= knowledge.name %></td>
        <td><%= link_to '详细', knowledge_path(knowledge), target: '_blank' %></td>
        <td><%= link_to '编辑', edit_admin_knowledge_path(knowledge) %></td>
        <td><%= link_to '添加章节', new_admin_knowledge_path(parent_id: knowledge) %></td>
        <td><%= link_to '删除', admin_knowledge_path(knowledge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @knowledges %>

</div>
