<div class="passage" id="wiki_<%= knowledge.id %>">

  <div class="passage-content">
    <%= ex_simple_format knowledge.wiki.try(:body) %>
  </div>

  <div class="passage-info clearfix">

    <div class="pull-left">
      <%= link_to '插入段落', new_knowledge_path(knowledge, position: 1), :remote => true %>
      <span>丨</span><%= link_to '编辑内容', new_knowledge_wiki_path(knowledge), remote: true %>
      <span>丨所有版本：</span><%= link_to knowledge.wiki_histories_count, knowledge_wikis_path %>
    </div>

    <div class="pull-right">
      <span>最近贡献：</span>
      <%= link_to knowledge.wiki.try(:commit).try(:name), person_path(knowledge.wiki) %>
    </div>

  </div>

</div>
