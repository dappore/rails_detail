<% content_for :title, ' ' %>
<% content_for :meta_description, '' %>

<div class="row">

<div class="sixteen wide column">
  <ol class="ui breadcrumb">
    <li class="section active"><%= @knowledge.name %></li>
  </ol>
</div>

</div>

<div class="row">

<div class="twelve wide column">

  <h4 class="ui center aligned header">
    <%= @knowledge.name %>
  </h4>

  <div class="ui divided items">
    <div class="item" id="major_<%= @knowledge.id %>">
      <div class="content">
        <div class="description">
          <%= ex_simple_format @knowledge.major.try(:body) %>
        </div>
      </div>
    </div>

    <% @knowledge.children.each do |child| %>
    <div class="item" id="minor_<%= child.id %>">
      <div class="content">
        <div class="header">
          <%= child.name %>
        </div>
        <div class="description">
          <%= ex_simple_format child.minor.try(:body) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>

<div class="four wide column">


</div>

</div>