<div class="three wide column">
  <%= render 'site/base/nav_users' %>
</div>

<div class="thirteen wide column">

  <div class="ui top attached menu borderless">
    <div class="item"><strong>Site list</strong></div>
    <div class="right menu">
      <div class="item"><%= link_to 'æ–°å»º', new_site_site_path, class: 'ui teal button' %></div>
    </div>
  </div>

  <div class="ui segment bottom attached">
  </div>

  <table class="ui table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>slug</th>
      <th>Current</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.id %></td>
        <td><%= site.name %></td>
        <td><%= site.slug %></td>
        <td><%= site.current %></td>
        <td>
          <% unless site.current %>
            <%= link_to 'set current', current_site_site_path(site), method: :patch, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
        <td><%= link_to 'Show', site_site_path(site) %></td>
        <td><%= link_to 'Edit', edit_site_site_path(site) %></td>
        <td><%= link_to 'Destroy', site_site_path(site), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>



