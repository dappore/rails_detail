- content_for(:tertiary_navigation) do
  %nav.tabs
    %ul
      %li{class: ('active' if action_name == "index")}
        = link_to site_inquiries_path do
          = t('spina.inquiries.all')
      %li{ class: ('active' if action_name == 'spam')}
        = link_to spam_site_inquiries_path do
          = t('spina.inquiries.spam')

.table-container
  %table.table
    %thead
      %tr
        %th{width: 200}= Spina::Inquiry.human_attribute_name(:name)
        %th= Spina::Inquiry.human_attribute_name(:message)
        %th{colspan: 2}

    %tbody
      - if @inquiries.present?
        - @inquiries.each do |inquiry|
          %tr
            %td
              %p 
                %strong= inquiry.name
            %td
              %p= link_to inquiry.summary, spina.site_inquiry_path(inquiry)
            %td.nowrap
              %small=l inquiry.created_at, format: '%e %B %Y %H:%M'
            %td.nowrap
              = link_to t('spina.inquiries.no_spam'), spina.unmark_spam_site_inquiry_path(inquiry), method: :patch, class: 'button button-link button-primary button-small', data: {icon: 'x'}
              = link_to t('spina.delete'), spina.site_inquiry_path(inquiry), method: :delete, class: 'button button-danger button-link button-small', data: {confirm: t('spina.inquiries.delete_confirmation', subject: inquiry.name)}
      - else
        %tr
          %td.align-center{colspan: 3}
            %em= t('spina.inquiries.empty_spam')
