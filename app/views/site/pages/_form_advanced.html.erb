#advanced.tab-content
  .table-container
    %table.table.table-form
      %tr
        %td
          = Page.human_attribute_name :draft
          %small= Page.human_attribute_name :draft_description
        %td
          = f.check_box :draft, data: {switch: true}
      %tr
        %td
          = Page.human_attribute_name :skip_to_first_child
          %small= Page.human_attribute_name :skip_to_first_child_description
        %td
          = f.check_box :skip_to_first_child, data: {switch: true}
      %tr
        %td
          = Page.human_attribute_name :link_url
          %small= Page.human_attribute_name :link_url_description
        %td
          = f.text_field :link_url, placeholder: Page.human_attribute_name(:link_url_placeholder)
      %tr
        %td
          = Page.human_attribute_name :show_in_menu
          %small= Page.human_attribute_name :show_in_menu_description
        %td
          = f.check_box :show_in_menu, data: {switch: true}
      %tr{style: ('border-bottom: none' if @page.custom_page?)}
        %td
          = Page.human_attribute_name :menu_title
        %td
          = f.text_field :menu_title, placeholder: Page.human_attribute_name(:show_in_menu_placeholder)

      %tr{style: ('display: none' if @page.custom_page?)}
        %td
          = Page.human_attribute_name :view_template
        %td
          .select-dropdown.page-template{data: {page_parts: current_theme.config.view_templates[@page.view_template || "show"][:page_parts]}}
            - options = options_for_select(current_theme.config.view_templates.map { |template| [template[1][:title], template[0], {'data-page-parts' => template[1][:page_parts]}] }, @page.view_template)
            = f.select :view_template, options

      %tr{style: ('display: none' if @page.custom_page?)}
        %td
          = Page.human_attribute_name :ancestry
        %td
          .select-dropdown.ancestry
            = f.select :ancestry, options_from_collection_for_select(Page.active.sorted.roots, 'id', 'menu_title', @page.ancestry.to_i), include_blank: true
