<div class="three wide column">
  <%= render 'site/base/nav_sites' %>
</div>

<div class="thirteen wide column">

  <div class="ui top attached menu borderless">
    <div class="item"><strong>Site list</strong></div>
    <div class="right menu">
      <div class="item"><%= link_to 'æ–°å»º', new_site_page_path, class: 'ui teal button' %></div>
    </div>
  </div>

  <div class="ui segment bottom attached">
  </div>

  <table class="ui table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>slug</th>
      <th>Current</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @pages.each do |page| %>
        <tr>
          <td><%= page.id %></td>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= link_to 'Show', site_page_path(page) %></td>
          <td><%= link_to 'Edit', edit_site_page_path(page) %></td>
          <td><%= link_to 'Destroy', site_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @pages %>
</div>