<div id="contents">
<% @detail.contents.each do |content| %>
  <div id="content_<%= content.id %>">
    <% if content.is_a?(Picture) %>
      <div class="ui image">
        <%= image_tag QiniuHelper.qiniu_url(content.key) %>
      </div>
    <% end %>
    <div>
      <%= content.body %>
      <%= link_to edit_detail_content_path(@detail, content), remote: true, class: 'grey text' do %>
        <i class="grey write square icon"></i>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<div id="detail_contents_add">
  <%= render 'the_detail/contents/add_link' %>
</div>


