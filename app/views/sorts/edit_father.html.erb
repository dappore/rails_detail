
  <%= form_for [ @sort], :html => {:class => "well form-horizontal"} do |f| %>

    <div class="control-group">
      <%= f.label :parent_id, "上级分类id：", :class => "control-label" %>
      <div class="controls"><%= f.collection_select :parent_id, Sort.all, :id, :name, {}, { :class => "input-xlarge" } %></div>
    </div>

    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary btn-large" %>
    </div>

  <% end %>

  <script type="text/javascript">
    $('#sort_parentid').select2();
  </script>
